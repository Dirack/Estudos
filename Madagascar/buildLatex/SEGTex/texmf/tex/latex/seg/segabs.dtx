% Define commands for figure inclusion.
% \begin{macro}{\plot}
%    \begin{macrocode}
\DeclareRobustCommand{\fullplot}[4][htbp]{%
  \begin{figure*}[#1]
    \centering
    \includegraphics[#3]{\fig@file{#2}}
    \caption[]{#4}
    \label{fig:\@path-#2}
    \label{fig:#2}
  \end{figure*}}
%    \end{macrocode}
% \end{macro}
% \begin{macro}{\sideplot}
