    \includegraphics[#3]{\fig@file{#2}}
    \caption[]{#4}
    \label{fig:\@path-#2}
    \label{fig:#2}
  \end{figure}}
%    \end{macrocode}
% \end{macro}
% \begin{macro}{\plot}
%    \begin{macrocode}
\def\plot{\@ifstar{\fullplot}{\sideplot}}
%    \end{macrocode}
